<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaCategorias">

    <TextView
        android:id="@+id/nombre_categoria"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="#2F4058"
        android:paddingTop="10dp"
        android:text="@string/categorias"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="36dp"
        android:textStyle="normal"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lista_categorias"
        android:layout_width="315dp"
        android:layout_height="443dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:divider="@color/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre_categoria" />

    <ImageButton
        android:id="@+id/verComandaButton"
        android:layout_width="46dp"
        android:layout_height="44dp"
        android:layout_marginStart="296dp"
        android:layout_marginEnd="10dp"
        android:background="#2F4058"
        android:src="@drawable/invoice_22150"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.768"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

</androidx.constraintlayout.widget.ConstraintLayout>