<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity"
    android:background="@drawable/backgroundtiki">



    <TextView
        android:id="@+id/nombre_registro"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="@color/otherbrown"
        android:fontFamily="Montserrat"
        android:paddingTop="10dp"
        android:text="@string/registro"
        android:textAlignment="center"
        android:textSize="36dp"
        android:textStyle="normal"
        android:textColor="@android:color/white"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/borderradiusblue"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre_registro"
        tools:layout_editor_absoluteX="24dp"
        android:textAlignment="center"
        android:gravity="center">



        <EditText
            android:id="@+id/nameEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:textAlignment="center"

            android:layout_margin="10dp" />

        <EditText
            android:id="@+id/userNameEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nombre Usuario"
            android:inputType="textPersonName"
            android:textAlignment="center"

            android:padding="5dp"
            android:layout_margin="10dp" />

        <EditText
            android:id="@+id/contraseñaEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textAlignment="center"

            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="299dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:text="Al pulsar aceptar se abrira la camara para ingresar una fotografia para el perfil."
            android:textAlignment="center"
            android:layout_margin="10dp" />



    </LinearLayout>

    <Button
        android:id="@+id/buttonAceptRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons_bg"
        android:text="Aceptar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <Button
        android:id="@+id/buttonCancelRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons_bg"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />



</androidx.constraintlayout.widget.ConstraintLayout>