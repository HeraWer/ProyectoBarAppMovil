<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.barreinolds">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/moesbar_108047"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".Empleados"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".TicketActivity"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".Pedido"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".ListaProductos"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".ListaCategorias"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".Mesas"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".SplashActivity"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>